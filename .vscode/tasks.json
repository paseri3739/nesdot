{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Vite Dev Server",
            "type": "shell",
            "command": "pnpm",
            "args": ["vite"],
            "isBackground": true,
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": ".",
                        "file": 1,
                        "location": 2,
                        "message": 3
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "ready in",
                    "endsPattern": "ready in"
                }
            }
        }
    ]
}
